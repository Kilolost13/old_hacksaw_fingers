  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "typecheck": "npx tsc --noEmit",
    "ci-local": "npx tsc --noEmit && npm run build --silent && npm test -- --watchAll=false --silent",
    "eject": "react-scripts eject",

    "e2e:install": "npx playwright install --with-deps",
    "e2e:build": "npm run build",
    "e2e:serve": "npx http-server ./build -p 3000 & npx wait-on http://127.0.0.1:3000/admin",
    "e2e:test": "npx playwright test --config=e2e/playwright.config.ts",
    "e2e": "npm run e2e:install && npm run e2e:build && npm run e2e:serve && npm run e2e:test"
  ,
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "jest": {
    "transformIgnorePatterns": [
      "node_modules/(?!(axios)/)"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/d3": "^7.4.3",
    "@types/vis": "^4.21.24",
    "autoprefixer": "^10.4.23",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "@playwright/test": "^1.45.0",
    "http-server": "^14.1.1",
    "wait-on": "^7.0.1"
  }
